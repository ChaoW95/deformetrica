<?xml version="1.0"?>
<optimization-parameters deformetrica-min-version="3.0.0">

    <!--<optimization-method-type>GradientAscent</optimization-method-type>-->
     <optimization-method-type>ScipyLBFGS</optimization-method-type>
     <!--plus violent mais plus rapide; optimiser by scipy, scipy calcule pas different de chaque vecteur de rentree-->

    <!-- <freeze-template>On</freeze-template> -->
    <max-iterations>200</max-iterations>
    <save-every-n-iters>10</save-every-n-iters>

    <convergence-tolerance>1e-6</convergence-tolerance><!--option added since default value is 1e-4-->
    <!--If this still does not work, try to add the <freeze-template>On</freeze-template> in the optimization_parameters.xml file.-->

    <!-- <freeze-translation-vectors>On</freeze-translation-vectors> -->
    <!-- <freeze-rotation-angles>On</freeze-rotation-angles> -->
    <freeze-scaling-ratios>On</freeze-scaling-ratios>


</optimization-parameters>
