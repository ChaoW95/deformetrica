<?xml version="1.0"?>
<optimization-parameters deformetrica-min-version="3.0.0">

    <optimization-method-type>GradientAscent</optimization-method-type>

    <initial-step-size>0.01</initial-step-size>

    <max-iterations>4</max-iterations>
    <convergence-tolerance>1e-3</convergence-tolerance>

    <save-every-n-iters>10</save-every-n-iters>

    <freeze-template>On</freeze-template>
    <freeze-cp>On</freeze-cp>
    <use-cuda>Off</use-cuda>
    <number-of-threads>1</number-of-threads>
    <use-rk2>Off</use-rk2>

</optimization-parameters>
