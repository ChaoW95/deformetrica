    <max-iterations>10</max-iterations>
    <save-every-n-iters>20</save-every-n-iters>
    <sample-every-n-mcmc-iters>10</sample-every-n-mcmc-iters>

    <initial-step-size>1e-5</initial-step-size>

    <!--<scale-initial-step-size>Off</scale-initial-step-size>-->
    <!--<freeze-template>On</freeze-template>-->

    <downsampling-factor>2</downsampling-factor>

    <number-of-threads>1</number-of-threads>

</optimization-parameters>
